    <link name="wheel_r">
        <visual>
            <origin xyz="0. 0. 0." rpy="1.57 0. 3.14"/>
            <geometry>
                <mesh filename="package://mlr_nav2_puzzlebot/meshes/Puzzlebot_Wheel.stl"/>
            </geometry>
            <material name="wheel_color">
                <color rgba="1.0 1.0 1.0 1.0"/>
